/* miniprogram/pages/Album/index.wxss */

.album-container {
  min-height: 100vh;
  background: var(--bg-primary, #F5F5F7);
}

/* 封面区域 */
.cover-section {
  position: relative;
  width: 100%;
  height: 400rpx;
  overflow: hidden;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.cover-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 32rpx;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.6));
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.cover-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #fff;
}

.cover-count {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 相册网格 */
.album-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 4rpx;
  padding: 4rpx;
}

.grid-item {
  position: relative;
  aspect-ratio: 1;
  overflow: hidden;
}

.grid-image {
  width: 100%;
  height: 100%;
  transition: transform 0.3s ease;
}

.grid-item:active .grid-image {
  transform: scale(0.95);
}

.grid-likes {
  position: absolute;
  bottom: 8rpx;
  right: 8rpx;
  display: flex;
  align-items: center;
  gap: 4rpx;
  background: rgba(0, 0, 0, 0.5);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.heart-icon {
  font-size: 20rpx;
}

.like-count {
  font-size: 22rpx;
  color: #fff;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.empty-image {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary, #1D1D1F);
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: var(--text-secondary, #86868B);
}

/* 加载中 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #E5E5E5;
  border-top-color: var(--primary, #007AFF);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 26rpx;
  color: var(--text-secondary, #86868B);
  margin-top: 20rpx;
}

/* 悬浮按钮 */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: 60rpx;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #007AFF, #5856D6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 122, 255, 0.4);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.fab:active {
  transform: scale(0.92);
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.3);
}

.fab-icon {
  font-size: 60rpx;
  font-weight: 300;
  color: #fff;
  line-height: 1;
}
