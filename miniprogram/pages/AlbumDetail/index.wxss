/* miniprogram/pages/AlbumDetail/index.wxss */

.detail-container {
  min-height: 100vh;
  background: #F5F5F7;
  padding-bottom: 120rpx;
}

/* 照片区域 */
.image-section {
  width: 100%;
  background: #000;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 500rpx;
  max-height: 70vh;
}

.detail-image {
  width: 100%;
  max-height: 70vh;
}

/* 操作栏 */
.action-bar {
  display: flex;
  justify-content: space-around;
  padding: 24rpx 0;
  background: #fff;
  border-bottom: 1rpx solid #E5E5E5;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.action-icon {
  font-size: 44rpx;
  transition: transform 0.2s ease;
}

.action-icon.liked {
  animation: likeAnimation 0.3s ease;
}

@keyframes likeAnimation {
  0% { transform: scale(1); }
  50% { transform: scale(1.3); }
  100% { transform: scale(1); }
}

.action-icon.delete {
  opacity: 0.6;
}

.action-text {
  font-size: 24rpx;
  color: #86868B;
}

.action-text.delete {
  color: #FF3B30;
}

/* 信息区域 */
.info-section {
  padding: 32rpx;
  background: #fff;
  margin-top: 16rpx;
}

.uploader-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.uploader-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1D1D1F;
}

.upload-time {
  font-size: 24rpx;
  color: #86868B;
}

.content {
  font-size: 28rpx;
  color: #1D1D1F;
  line-height: 1.6;
}

/* 评论区域 */
.comment-section {
  padding: 32rpx;
  background: #fff;
  margin-top: 16rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1D1D1F;
  margin-bottom: 24rpx;
}

.comment-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.comment-item {
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #F5F5F7;
}

.comment-item:last-child {
  border-bottom: none;
}

.comment-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.commenter-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #007AFF;
}

.comment-time {
  font-size: 22rpx;
  color: #A1A1A6;
}

.comment-content {
  font-size: 28rpx;
  color: #1D1D1F;
  line-height: 1.5;
}

.no-comment {
  text-align: center;
  padding: 40rpx;
  color: #86868B;
  font-size: 26rpx;
}

/* 评论输入框 */
.comment-input-box {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  padding: 20rpx 32rpx;
  background: #fff;
  border-top: 1rpx solid #E5E5E5;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.comment-input-box.show {
  transform: translateY(0);
}

.comment-input {
  flex: 1;
  height: 72rpx;
  padding: 0 24rpx;
  background: #F5F5F7;
  border-radius: 36rpx;
  font-size: 28rpx;
}

.send-btn {
  margin-left: 20rpx;
  padding: 16rpx 32rpx;
  background: #007AFF;
  border-radius: 36rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
}

.send-btn:active {
  opacity: 0.8;
}
