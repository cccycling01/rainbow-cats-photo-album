/* miniprogram/pages/MessageBoard/index.wxss */

.message-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #F5F5F7;
}

/* 头部 */
.header {
  padding: 32rpx;
  background: #fff;
  border-bottom: 1rpx solid #E5E5E5;
}

.title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1D1D1F;
  display: block;
}

.subtitle {
  font-size: 26rpx;
  color: #86868B;
  margin-top: 8rpx;
  display: block;
}

/* 消息列表 */
.message-list {
  flex: 1;
  padding: 24rpx;
  padding-bottom: 140rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #1D1D1F;
}

.empty-hint {
  font-size: 26rpx;
  color: #86868B;
  margin-top: 12rpx;
}

/* 消息项 */
.message-item {
  display: flex;
  margin-bottom: 24rpx;
}

.message-item.mine {
  justify-content: flex-end;
}

.message-item.theirs {
  justify-content: flex-start;
}

/* 气泡 */
.message-bubble {
  max-width: 70%;
  padding: 20rpx 24rpx;
  border-radius: 24rpx;
  position: relative;
}

.message-item.mine .message-bubble {
  background: linear-gradient(135deg, #007AFF, #5856D6);
  border-bottom-right-radius: 8rpx;
}

.message-item.theirs .message-bubble {
  background: #fff;
  border-bottom-left-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

/* 悄悄话样式 */
.message-bubble.whisper {
  background: linear-gradient(135deg, #FF9500, #FF6B00) !important;
}

.bubble-content {
  word-break: break-all;
}

.message-text {
  font-size: 28rpx;
  line-height: 1.5;
  color: #1D1D1F;
}

.message-item.mine .message-text {
  color: #fff;
}

/* 元信息 */
.bubble-meta {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-top: 8rpx;
}

.sender-name {
  font-size: 22rpx;
  color: #86868B;
}

.message-item.mine .sender-name {
  color: rgba(255, 255, 255, 0.7);
}

.message-time {
  font-size: 20rpx;
  color: #A1A1A6;
}

.message-item.mine .message-time {
  color: rgba(255, 255, 255, 0.6);
}

.whisper-icon {
  font-size: 20rpx;
}

/* 悄悄话提示 */
.whisper-hint {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 24rpx;
  margin-bottom: 8rpx;
}

.whisper-hint text {
  font-size: 22rpx;
  color: #FF9500;
  background: rgba(255, 149, 0, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

/* 加载中 */
.loading {
  display: flex;
  justify-content: center;
  padding: 40rpx;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid #E5E5E5;
  border-top-color: #007AFF;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* 输入区域 */
.input-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  background: #fff;
  border-top: 1rpx solid #E5E5E5;
  gap: 16rpx;
}

/* 悄悄话开关 */
.whisper-toggle {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F5F5F7;
  border-radius: 50%;
  font-size: 36rpx;
  transition: all 0.3s ease;
}

.whisper-toggle.active {
  background: linear-gradient(135deg, #FF9500, #FF6B00);
  transform: scale(1.1);
}

/* 输入框 */
.input-wrapper {
  flex: 1;
  height: 72rpx;
  background: #F5F5F7;
  border-radius: 36rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
}

.message-input {
  width: 100%;
  height: 100%;
  font-size: 28rpx;
}

/* 发送按钮 */
.send-btn {
  height: 72rpx;
  padding: 0 32rpx;
  background: #E5E5E5;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.send-btn.active {
  background: linear-gradient(135deg, #007AFF, #5856D6);
}

.send-btn text {
  font-size: 28rpx;
  font-weight: 500;
  color: #86868B;
}

.send-btn.active text {
  color: #fff;
}

.send-btn:active {
  transform: scale(0.95);
}
