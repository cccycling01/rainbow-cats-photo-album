/* miniprogram/pages/AnniversaryAdd/index.wxss */

.add-container {
  min-height: 100vh;
  background: #F5F5F7;
  padding: 32rpx;
}

/* 表单区域 */
.form-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 8rpx 0;
}

.form-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #F5F5F7;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #1D1D1F;
}

.form-input {
  flex: 1;
  text-align: right;
  font-size: 28rpx;
  color: #1D1D1F;
}

.form-picker {
  font-size: 28rpx;
  color: #1D1D1F;
}

.form-picker.placeholder {
  color: #A1A1A6;
}

/* 提示 */
.tips {
  margin-top: 32rpx;
  padding: 0 16rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.tips text {
  font-size: 24rpx;
  color: #86868B;
}

/* 提交按钮 */
.submit-section {
  margin-top: 60rpx;
  padding: 0 32rpx;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #007AFF, #5856D6);
  border-radius: 48rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}
