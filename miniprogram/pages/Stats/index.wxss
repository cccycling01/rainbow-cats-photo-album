/* miniprogram/pages/Stats/index.wxss */
.stats-container { min-height: 100vh; background: #F5F5F7; padding: 32rpx; }
.streak-card { background: linear-gradient(135deg, #FF9500, #FF6B00); border-radius: 32rpx; padding: 48rpx; text-align: center; color: #fff; margin-bottom: 32rpx; }
.streak-icon { font-size: 80rpx; }
.streak-value { font-size: 80rpx; font-weight: 700; }
.streak-label { font-size: 28rpx; opacity: 0.9; }

.week-stats { display: flex; gap: 24rpx; margin-bottom: 40rpx; }
.stat-item { flex: 1; background: #fff; border-radius: 20rpx; padding: 32rpx; text-align: center; }
.stat-value { display: block; font-size: 48rpx; font-weight: 700; color: #007AFF; }
.stat-label { font-size: 24rpx; color: #86868B; }

.section-title { font-size: 30rpx; font-weight: 600; color: #1D1D1F; margin-bottom: 20rpx; }
.chart { background: #fff; border-radius: 20rpx; padding: 32rpx; display: flex; justify-content: space-around; align-items: flex-end; height: 300rpx; }
.bar { display: flex; flex-direction: column; align-items: center; }
.bar-value { font-size: 24rpx; color: #007AFF; margin-bottom: 8rpx; }
.bar-label { font-size: 22rpx; color: #86868B; margin-top: 8rpx; }
