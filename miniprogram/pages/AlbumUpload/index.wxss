/* miniprogram/pages/AlbumUpload/index.wxss */

.upload-container {
  min-height: 100vh;
  background: #F5F5F7;
  padding: 32rpx;
}

/* 照片网格 */
.image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.image-item {
  position: relative;
  aspect-ratio: 1;
  border-radius: 16rpx;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.remove-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 44rpx;
  height: 44rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.remove-btn text {
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
}

.add-btn {
  aspect-ratio: 1;
  background: #fff;
  border: 2rpx dashed #E5E5E5;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.add-icon {
  font-size: 60rpx;
  color: #86868B;
  font-weight: 300;
}

.add-text {
  font-size: 24rpx;
  color: #86868B;
}

/* 描述输入 */
.content-section {
  margin-top: 32rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  position: relative;
}

.content-input {
  width: 100%;
  min-height: 160rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

.content-count {
  position: absolute;
  bottom: 24rpx;
  right: 24rpx;
  font-size: 24rpx;
  color: #A1A1A6;
}

/* 提示 */
.tips {
  margin-top: 32rpx;
  padding: 0 16rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.tips text {
  font-size: 24rpx;
  color: #86868B;
}

/* 提交按钮 */
.submit-section {
  margin-top: 60rpx;
  padding: 0 32rpx;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #007AFF, #5856D6);
  border-radius: 48rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn[disabled] {
  opacity: 0.5;
}

.submit-btn:active:not([disabled]) {
  opacity: 0.9;
  transform: scale(0.98);
}
