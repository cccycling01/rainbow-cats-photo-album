/* miniprogram/pages/Anniversary/index.wxss */

.anniversary-container {
  min-height: 100vh;
  background: #F5F5F7;
}

/* 倒计时区域 */
.countdown-section {
  padding: 32rpx;
}

.countdown-card {
  background: linear-gradient(135deg, #007AFF, #5856D6);
  border-radius: 32rpx;
  padding: 48rpx 32rpx;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 122, 255, 0.3);
}

.countdown-card.today {
  background: linear-gradient(135deg, #FF9500, #FF6B00);
  box-shadow: 0 8rpx 24rpx rgba(255, 149, 0, 0.4);
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.02); }
}

.countdown-label {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 16rpx;
}

.countdown-days {
  display: flex;
  align-items: baseline;
  justify-content: center;
  margin-bottom: 16rpx;
}

.days-number {
  font-size: 120rpx;
  font-weight: 700;
  color: #fff;
  line-height: 1;
}

.days-unit {
  font-size: 40rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-left: 8rpx;
}

.countdown-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 8rpx;
}

.countdown-date {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 列表区域 */
.list-section {
  padding: 0 32rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1D1D1F;
  margin-bottom: 24rpx;
}

.anniversary-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.anniversary-item {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.anniversary-item.today {
  border: 2rpx solid #FF9500;
  background: linear-gradient(135deg, rgba(255, 149, 0, 0.1), rgba(255, 107, 0, 0.05));
}

.item-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.item-info {
  flex: 1;
}

.item-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1D1D1F;
  margin-bottom: 8rpx;
}

.item-date {
  font-size: 24rpx;
  color: #86868B;
}

.item-countdown {
  display: flex;
  align-items: baseline;
  margin-right: 20rpx;
}

.countdown-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #007AFF;
}

.anniversary-item.today .countdown-value {
  color: #FF9500;
}

.countdown-unit {
  font-size: 24rpx;
  color: #86868B;
  margin-left: 4rpx;
}

.item-delete {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0.3;
}

.item-delete text {
  font-size: 36rpx;
  color: #86868B;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #1D1D1F;
}

.empty-hint {
  font-size: 26rpx;
  color: #86868B;
  margin-top: 12rpx;
}

/* 加载中 */
.loading {
  display: flex;
  justify-content: center;
  padding: 40rpx;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid #E5E5E5;
  border-top-color: #007AFF;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* 悬浮按钮 */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: 60rpx;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #007AFF, #5856D6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 122, 255, 0.4);
}

.fab-icon {
  font-size: 60rpx;
  font-weight: 300;
  color: #fff;
}
