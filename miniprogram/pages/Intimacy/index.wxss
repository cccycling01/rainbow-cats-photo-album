/* miniprogram/pages/Intimacy/index.wxss */
.intimacy-container { min-height: 100vh; background: #F5F5F7; padding: 32rpx; }
.level-card { background: linear-gradient(135deg, #FF2D55, #FF6B6B); border-radius: 32rpx; padding: 48rpx; text-align: center; color: #fff; margin-bottom: 40rpx; }
.level-badge { display: inline-block; background: rgba(255,255,255,0.2); padding: 8rpx 24rpx; border-radius: 24rpx; font-size: 24rpx; margin-bottom: 16rpx; }
.title { font-size: 40rpx; font-weight: 700; margin-bottom: 24rpx; }
.exp-bar { height: 16rpx; background: rgba(255,255,255,0.3); border-radius: 8rpx; overflow: hidden; margin-bottom: 12rpx; }
.exp-fill { height: 100%; background: #fff; border-radius: 8rpx; transition: width 0.3s; }
.exp-text { font-size: 24rpx; opacity: 0.8; }

.section-title { font-size: 30rpx; font-weight: 600; color: #1D1D1F; margin-bottom: 20rpx; }
.badges { display: flex; flex-wrap: wrap; gap: 16rpx; margin-bottom: 40rpx; }
.badge { padding: 16rpx 24rpx; background: #fff; border-radius: 16rpx; font-size: 28rpx; }
.badge.empty { color: #A1A1A6; background: #F5F5F7; }

.activities { background: #fff; border-radius: 20rpx; padding: 8rpx 0; }
.activity { display: flex; align-items: center; padding: 24rpx; border-bottom: 1rpx solid #F5F5F7; }
.activity:last-child { border-bottom: none; }
.act-icon { font-size: 32rpx; margin-right: 16rpx; }
.act-text { flex: 1; font-size: 28rpx; color: #1D1D1F; }
.act-exp { font-size: 24rpx; color: #34C759; }
.empty { text-align: center; padding: 40rpx; color: #A1A1A6; }
